{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],    
    "jsRules": {},
    "rules": {
        "no-shadowed-variable": false,
        "max-line-length": [
            true,
            340
        ],"member-access": [
            false
        ],
        "object-literal-sort-keys": [
            false
        ],
        "quotemark": [
            "single"
        ],
        "triple-equals": [
            true,
            "allow-null-check"
        ],
        "member-ordering": [
            true,
            {
                "order": [
                    "static-field",
                    "instance-field",
                    "static-method",
                    "instance-method"
                ]
            }
        ],
        "no-console": [
            false
        ]
    },
    "rulesDirectory": []  
}